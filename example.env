############################################
# Core Defaults
############################################
# ISO timestamp for default user registration
DEFAULT_REGISTERED_AT=2025-01-01T00:00:00Z

############################################
# Database URLs (Local Development)
############################################
# Core events database
EVENTS_DB_URL=postgresql+psycopg2://postgres:secret@localhost:5432/eigenwatch_events

# Analytics database
ANALYTICS_DB_URL=postgresql+psycopg2://postgres:secret@localhost:5432/eigenwatch_analytics

# Dagster internal metadata DB
DAGSTER_PG_URL=postgresql://postgres:secret@localhost:5432/dagster

############################################
# Pipeline Configuration
############################################
# Safety margins to prevent processing reorged blocks
SAFETY_BUFFER_BLOCKS=10
SAFETY_BUFFER_SECONDS=60

# Batch and job settings
MAX_OPERATORS_PER_BATCH=100
SNAPSHOT_HOUR_UTC=0
LOG_BATCH_PROGRESS_EVERY=10

############################################
# Dagster
############################################
# Local absolute path to Dagster home directory
DAGSTER_HOME=/path/to/project/pipeline/

############################################
# Subgraph
############################################
# GraphQL endpoint for The Graph
SUBGRAPH_ENDPOINT=https://api.studio.thegraph.com/query/YOUR_ID/YOUR_SUBGRAPH/version/latest

# API key used for authenticated subgraph access
SUBGRAPH_API_KEY=your_subgraph_api_key_here

############################################
# Query tuning
############################################
RESULTS_PER_QUERY=100
